<h1 class="ml-3 mt-3">All services</h1>

<div class="d-flex">
  <div class="ml-3 mb-5">
    <% @services.each do |service| %>
      <%= render "services/partials/card_service", service: service %>
    <% end %>
  </div>

  <div id="map"
      style="width: 100%; height: 600px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
